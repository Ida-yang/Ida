<script>
    import store from '../../../../store/store'
    import axios from 'axios'
    export default {
        name:'ProcessQualityControl',
        computed: {
            tableData(){
                return store.state.incomeQISList;
            },
            tableNumber(){
               return store.state.incomeQISListnumber;     
            },
            Height(){
                return store.state.maxheight;
            },
        },
        props:{
            totalNum:Number,
        },
        store,
        data(){
            return {
                searchList:{
                    orderno: null,
                    productwo: null,
                    sn: null,
                },
                recentPage:1,//默认第一页
                recordCount:10,//默认10条
                maxheight:null,
            }
        },
        mounted() {
            this.reloadTable();
            let _this=this;
            _this.$store.commit("getMaxHeight")
            _this.maxheight = _this.Height;
        },
        methods: {
            reloadTable(flag) {
                let _this = this;
                let searchList = {}
                if(flag) {
                    if(_this.searchList.orderno) {
                        searchList.orderno = _this.searchList.orderno;
                    }
                    if(_this.searchList.productwo) {
                        searchList.productwo = _this.searchList.productwo;
                    }
                    if(_this.searchList.sn) {
                        searchList.sn = _this.searchList.sn;
                    }
                }
                axios({
                    method: 'post',
                    url: _this.$store.state.defaultHttp+_this.$store.state.processQISUrl+'getByPage?recentPage='+_this.recentPage+'&recordCount='+_this.recordCount,
                    data: JSON.stringify(searchList),
                }).then(function(res){
                    _this.$store.state.incomeQISList = res.data.result.records;
                    _this.$store.state.incomeQISListnumber = res.data.result.totalRecords;
                    
                }).catch(function(err){
                    console.log(err);
                });
            },
            search() {
                this.$options.methods.reloadTable.bind(this)(true);
            },
            clear() {
                this.searchList.orderno = null;
                this.searchList.productwo = null;
                this.searchList.sn = null;
            },
            handleSizeChange(val) {
                let _this = this;
                _this.recordCount = val;
                _this.$options.methods.reloadTable.bind(_this)();
            },
            handleCurrentChange(val) {
                let _this = this;
                _this.recentPage = val;
                _this.$options.methods.reloadTable.bind(_this)();
            },
            CheckTheDetails(index, row){
                
            },
            rowClick(row, event, column) {
                this.$options.methods.CheckTheDetails.bind(this)(null, row);
            }
        },
        
    }
</script>
