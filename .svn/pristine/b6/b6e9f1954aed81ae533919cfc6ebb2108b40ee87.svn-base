<template>
<!-- 形态转换 -->
    <div>
        <div class="searchList" @keyup.enter="search()">
            <el-input v-model="searchList.ordernumber" placeholder="单号"></el-input>
        </div>
        <div class="searchList">
            <el-select
                @change="search()"
                v-model="searchList.status"
                placeholder="状态">
                <el-option
                v-for="item in statusList"
                :key="item.id"
                :label="item.value"
                :value="item.id">
                </el-option>
            </el-select>
        </div>
        <!-- <div class="searchList" @keyup.enter="search()">
            <el-input v-model="searchList.makeuser" placeholder="制单人"></el-input>
        </div>
        <div class="searchList" @keyup.enter="search()">
            <el-input v-model="searchList.audituser" placeholder="审核人"></el-input>
        </div> -->
        <el-button type="success" size="mini" @click="search()">查询</el-button>
        <el-button type="info" size="mini" @click="clear()">清空</el-button>

        <el-table
            :data="tableData"
            :max-height="maxheight"
            border
            row-key="id"
            style="width: 100% ;text-align: center;margin-top:10px">
            <el-table-column
                header-align="center"
                align="center"
                label="单号"
                width="180">
                <template slot-scope="scope">
                    <el-button
                    size="mini"
                    style="border:none;color:#3c8dbc"
                    @click="CheckTheDetails(scope.$index, scope.row)">{{ scope.row.ordernumber }}</el-button>
                </template>
            </el-table-column>
            <el-table-column
                prop="status"
                header-align="center"
                align="center"
                label="状态"
                width="120">
                <template slot-scope="scope">
                    <el-tag
                    :type="scope.row.status ===0 ?'primary':'success'"
                    close-transition>{{scope.row.status | formatStatus}}</el-tag>
                </template>
            </el-table-column>
            <el-table-column
                prop="makeuser"
                label="制单人"
                header-align="center"
                align="center"
                width="120">
            </el-table-column>
            <el-table-column
                prop="makeordertime"
                header-align="center"
                align="center"
                label="制单时间"
                width="200">
            </el-table-column>
            <el-table-column
                prop="audituser"
                header-align="center"
                align="center"
                label="审核人"
                width="120">
            </el-table-column>
        </el-table>
        <div class="block numberPage">
            <el-pagination
            @size-change="handleSizeChange"
            @current-change="handleCurrentChange"
            :current-page="recentPage"
            :page-sizes="[10, 15, 20, 25]"
            :page-size="10"
            layout="total, sizes, prev, pager, next, jumper"
            :total="tableNumber">
            </el-pagination>
        </div>
    </div>
</template>
<style>
    .numberPage{
        text-align: right;
        position: relative;
        top: 0;
        background-color: #fff;
        width: 100%;
    }
    .el-dialog__body {
        padding: 30px 80px 30px 20px !important;
        color: #606266;
        font-size: 14px;
    }
    .el-table td, .el-table th {
        padding: 6px 0 !important;
        line-height: 30px;
    }
    .el-input__inner {
        height: 30px;
        line-height: 30px;
        width: 100%;
    }
    .el-table {
        font-size: 12px!important;
    }
    .el-table td, .el-table th {
        padding: 8px 0;
        line-height:30px; 
    }
</style>

<script>
    import store from '../../../../store/store'
    import axios from 'axios'
    export default {
        name:'TransferWithin',
        computed: {
            tableData(){
                return store.state.modalShiftList;
            },
            tableNumber(){
               return store.state.modalShiftListnumber;     
            },
            Height(){
                return store.state.maxheight;
            },
        },
        filters: {
            formatStatus: function (val) {
                return val == 0 ? '未转换' : val== 1 ?  '已提交' : val== 2 ?  '已重新打印' : "未知状态";
            },

        },
        props:{
            totalNum:Number,
        },
        store,
        data(){
            return {
                searchList:{
                    ordernumber: null,
                    status: null,
                    makeuser: null,
                    audituser: null,
                },
                statusList: [//状态
                    {id:"0", value:"未转换"},
                    {id:"1", value:"已提交"},
                    {id:"2", value:"已重新打印"},
                ],
                recentPage:1,//默认第一页
                recordCount:10,//默认10条
                maxheight:null,
            }
        },
        mounted() {
            this.reloadTable();
            let _this=this;
            _this.$store.commit("getMaxHeight")
            _this.maxheight = _this.Height;
        },
        methods: {
            reloadTable(flag) {
                let _this = this;
                let searchList = {}
                if(flag) {
                    if(_this.searchList.ordernumber) {
                        searchList.ordernumber = _this.searchList.ordernumber;
                    }
                    if(_this.searchList.status) {
                        searchList.status = _this.searchList.status;
                    }
                    if(_this.searchList.makeuser) {
                        searchList.makeuser = _this.searchList.makeuser;
                    }
                    if(_this.searchList.audituser) {
                        searchList.audituser = _this.searchList.audituser;
                    }
                }
                axios({
                    method: 'post',
                    url: _this.$store.state.defaultHttp+_this.$store.state.modalShiftUrl+'getByPage?recentPage='+_this.recentPage+'&recordCount='+_this.recordCount,
                    data: JSON.stringify(searchList),
                }).then(function(res){
                    _this.$store.state.modalShiftList = res.data.result.records;
                    _this.$store.state.modalShiftListnumber = res.data.result.totalRecords;
                    
                }).catch(function(err){
                    console.log(err);
                });
            },
            search() {
                this.$options.methods.reloadTable.bind(this)(true);
            },
            clear() {
                this.searchList.ordernumber = null;
                this.searchList.status = null;
                this.searchList.makeuser = null;
                this.searchList.audituser = null;
                this.$options.methods.reloadTable.bind(this)(true);
            },
            handleSizeChange(val) {
                let _this = this;
                _this.recordCount = val;
                _this.$options.methods.reloadTable.bind(_this)();
            },
            handleCurrentChange(val) {
                let _this = this;
                _this.recentPage = val;
                _this.$options.methods.reloadTable.bind(_this)();
            },
            
            //点击打开详情
            CheckTheDetails(index, row){
                this.$store.state.transferWithinId = ""
                this.$store.state.transferWithinId = row.id;
                this.$router.push({ path: '/TransferWithinDetails' })
            },
            // rowClick(row, event, column) {
            //     this.$options.methods.CheckTheDetails.bind(this)(null, row);
            // }
        },
        
    }
</script>
