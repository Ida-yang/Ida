<script>
    import store from '../../../../store/store'
    import axios from 'axios'
    export default {
        name:'ReleaseOfProduction',
        computed: {
            tableData(){
                return store.state.incomeQISList;
            },
            tableNumber(){
               return store.state.incomeQISListnumber;     
            },
            Height(){
                return store.state.maxheight;
            },
        },
        props:{
            totalNum:Number,
        },
        store,
        data(){
            return {
                searchList:{
                },
                recentPage:1,//默认第一页
                recordCount:10,//默认10条
                maxheight:null,
            }
        },
        mounted() {
            this.reloadTable();
            let _this=this;
            _this.$store.commit("getMaxHeight")
            _this.maxheight = _this.Height;
        },
        methods: {
            reloadTable(flag,num) {
                let _this = this;
                let searchList = {}
                if(flag) {
                    if(_this.searchList.ordernumber) {
                        if(num ==1){
                            searchList.ordernumber = _this.DelBlankSpace(_this.searchList.ordernumber);
                        }else{
                            searchList.ordernumber = null;
                            _this.searchList.ordernumber = null;
                        }
                        
                    }
                    if(_this.searchList.puwomate) {
                        if(num ==1){
                            searchList.puwomate = _this.DelBlankSpace(_this.searchList.puwomate);
                        }else{
                            searchList.puwomate = null;
                            _this.searchList.puwomate = null;
                        }
                    }
                    if(_this.searchList.rejectcause) {
                        if(num ==1){
                            searchList.rejectcause = _this.DelBlankSpace(_this.searchList.rejectcause);
                        }else{
                            searchList.rejectcause = null;
                            _this.searchList.rejectcause = null;
                        }
                    }
                }
                axios({
                    method: 'post',
                    url: _this.$store.state.defaultHttp+_this.$store.state.incomeQISUrl+'selectPurchqaorderGetByPage?recentPage='+_this.recentPage+'&recordCount='+_this.recordCount,
                    data: JSON.stringify(searchList),
                }).then(function(res){
                    _this.$store.state.incomeQISList = res.data.result.records;
                    _this.$store.state.incomeQISListnumber = res.data.result.totalRecords;
                    
                }).catch(function(err){
                    console.log(err);
                });
            },
            search(num) {
                this.$options.methods.reloadTable.bind(this)(true,num);
                this.searchList.ordernumber = null;
                this.searchList.puwomate = null;
                this.searchList.rejectcause = null;
            },
            handleSizeChange(val) {
                let _this = this;
                _this.recordCount = val;
                _this.$options.methods.reloadTable.bind(_this)();
            },
            handleCurrentChange(val) {
                let _this = this;
                _this.recentPage = val;
                _this.$options.methods.reloadTable.bind(_this)();
            },
            CheckTheDetails(index, row){
                
            },
            rowClick(row, event, column) {
                this.$options.methods.CheckTheDetails.bind(this)(null, row);
            }
        },
        
    }
</script>
